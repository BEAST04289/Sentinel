# Sentinel Environment Variables
# Copy this to .env and fill in your values

# OpenAI API Key (for embeddings and LLM reasoning)
OPENAI_API_KEY=sk-your-key-here

# Or use Emergent LLM Key
EMERGENT_LLM_KEY=your-emergent-key-here

# Portfolio settings (comma-separated tickers)
DEFAULT_PORTFOLIO=NVDA,TSLA,AAPL

# Server settings
HOST=0.0.0.0
PORT=8000

# Pathway settings
PATHWAY_HOST=0.0.0.0
PATHWAY_PORT=8765

# File watch directory
WATCH_DIR=./sec_filings
